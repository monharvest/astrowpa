---
import DarkMode from './DarkMode.astro';
import InstallPrompt from './InstallPrompt.astro';

const links = [
	{ href: '/', label: 'Home' },
	{ href: '/posts', label: 'Posts' },
	{ href: '/categories', label: 'Categories' },
	{ href: '/search', label: 'Search' }
];
---
<header class="w-full border-b border-slate-200 bg-white/80 backdrop-blur dark:border-slate-700 dark:bg-slate-900/70">
	<nav class="mx-auto flex w-full max-w-4xl items-center justify-between px-4 py-4 sm:px-6 lg:px-8">
		<a class="text-xl font-semibold tracking-tight text-slate-900 dark:text-white" href="/">
			AstroPWA
		</a>
		<div class="flex flex-wrap items-center gap-4 text-sm font-medium text-slate-600 dark:text-slate-200">
			{links.map((link) => (
				<a class="transition hover:text-brand-secondary" href={link.href}>{link.label}</a>
			))}
			<DarkMode />
			<InstallPrompt label="Install" className="border-brand-primary/40 bg-brand-primary/10 text-brand-primary" />
		</div>
	</nav>
</header>
